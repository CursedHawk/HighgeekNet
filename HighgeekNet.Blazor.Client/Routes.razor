@using HighgeekNet.Blazor.Client
@using HighgeekNet.Blazor.Client.Blazor.Pages.Auth
@using Microsoft.AspNetCore.Components.Authorization
<CascadingAuthenticationState>
    <Router AppAssembly="typeof(Program).Assembly">
        <Found Context="routeData">
            <HighgeekNet.Blazor.Client.Auth.PermisssionAuthorizeRouteView RouteData="routeData" DefaultLayout="typeof(Client.Blazor.Layout.MainLayout)">
                <NotAuthorized>
                    <RedirectToLogin />
                </NotAuthorized>
            </HighgeekNet.Blazor.Client.Auth.PermisssionAuthorizeRouteView>
            <FocusOnNavigate RouteData="routeData" Selector="h1" />
        </Found>
    </Router>
</CascadingAuthenticationState>